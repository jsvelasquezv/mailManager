<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-header">
					<div class="row">
						<div class="col-md-6">
							<h4>Documentos</h4>
						</div>
						<div class="col-md-6">
							<div class="pull-right">
								<%= form_tag documents_path, :method => 'get', class:'form-inline' do %>
									<div class="form-group">
										<%= text_field_tag :search, nil , :class => 'form-control', placeholder: 'Ingresa un ID o una Fecha' %>
									</div>
									<div class="form-group">
										<%= submit_tag 'Buscar', :name => nil, class: 'btn btn-primary' %>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nombre</th>
							<th>Fecha Recibido</th>
							<th>Remitente</th>
							<th>Estado</th>
							<th>Categoria</th>
						</tr>
					</thead>
					<tbody>
					<% @documents.each do |document| %>
						<tr>
							<td><%= document.id %></td>
							<td><%= document.nombre %></td>
							<td><%= document.fechaRecibido %></td>
							<td><%= document.remitente %></td>
							<td><%= document.estado %></td>
							<td><%= document.categoria %></td>
							<td><%= link_to "Detalles", document %></td>
							<td><%= link_to "Entregar/Archivar", edit_document_path(document) %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>