<%= form_for(@document) do |f| %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">	
		<% if @document.errors.any? %>
    		<div class="alert alert-warning alert-dismissible" role="alert">
    		 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      			<h2>No se pudo radicar el documento :</h2>
      			<ul>
      			<% @document.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
     			<% end %>
      			</ul>
    		</div>
  		<% end %>	
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="form-group">
					<%= f.label :nombre, class: 'control-label' %>
					<%= f.text_field :nombre, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label 'Fecha de Recibo', class: 'control-label' %>
					<%= f.text_field :fechaRecibido, 'data-behaviour' => 'datepicker', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :remitente, class: 'control-label' %>
					<%= f.text_field :remitente, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :estado, class: 'control-label' %>
					<%= f.select :estado, options_for_select(['Previo', 'Entregado', 'Archivado']), {}, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :categoria, class: 'control-label' %>
					<% categorias = ['Admisión de tutela', 'Desacato', 'Fallo 1ra. Instancia',
								'Fallo 2da. Instancia', 'Derecho de petición', 'Solicitud de reembolso',
								'Solicitud devolución de aportes', 'Solicitud pago de incapacidad y/o licencia', 'Solicitud de retiro y Otro.'] %>
					<%= f.select :categoria, options_for_select(categorias), {}, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :observaciones, class: 'control-label' %>
					<%= f.text_field :observaciones, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.submit :Radicar, class: 'btn btn-primary', :data => {:confirm => 'Estas seguro de radicar el documento'} %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>